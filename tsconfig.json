{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"],
      "@components/*": ["./src/components/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/styles/Chakra.ts",
    "src/__tests__/pages/Home/index.spec.tsx",
    "src/assets/thumbsUp.tsx",
    "src/custom.d.ts",
    "src/components/NavBarSection/IconContainer"
, "src/components/NewPostEditor/UploadWidget.tsx"  ]
}
